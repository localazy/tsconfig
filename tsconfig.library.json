{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,

    "outDir": "${configDir}/dist",
    //    "rootDir": "${configDir}/src",
    "rootDirs": ["${configDir}/src", "${configDir}"],
    "baseUrl": "${configDir}",
    "paths": {
      "@/*": ["./src/*"]
      //      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "${configDir}/src"
    //    "${configDir}/tests"
  ],
  "exclude": ["${configDir}/node_modules", "${configDir}/dist", "${configDir}/coverage", "${configDir}/typedoc"]
}
