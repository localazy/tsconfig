{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.library.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "${configDir}/dist/tsconfig.tsbuildinfo",
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}/src",
    "rootDirs": ["${configDir}/src", "${configDir}"],
    "baseUrl": "${configDir}",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["${configDir}/src"],
  "exclude": ["node_modules", "${configDir}/dist", "${configDir}/coverage", "${configDir}/typedoc"]
}
