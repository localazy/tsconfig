{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js Library TypeScript Configuration",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /**
     * Module
     */

    // Output JavaScript will use modern ES2022 features
    "target": "ES2022",

    //
    "module": "NodeNext",

    //
    "moduleResolution": "nodenext",

    //
    "moduleDetection": "force",

    //
    "lib": ["ES2022"],

    /**
     * Compilation
     */

    // Generates source maps
    "sourceMap": true,

    // Generates `.d.ts` type definitions
    "declaration": true,

    // Generates source maps for type definitions
    "declarationMap": true
  }
}
